(defdist "Gamma Berman"
"Helper function for a gamma distribution"
("A")
(nil)
(lambda ; start lambda
(a)
(loop
 (let* ((U (random 1.0))
        (V (random 1.0))
        (X (expt U (/ 1 a)))
        (Y (expt V (/ 1 (- 1 a)))))
   (when (<= (+ X Y) 1)
     (return (* (call-distribution "Gamma Cheng" 2) X)))))
) ; end lambda
) ; end defdist
