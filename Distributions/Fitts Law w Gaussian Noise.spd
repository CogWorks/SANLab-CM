(defdist "Fitts Law w Gaussian Noise"
"Computes Fitts Law with Gaussian Noise"
("Width" "Amplitude" "Beta" "Alpha" "St. Dev.")
(0 0 0 0 0)
(lambda ; start lambda
(w d b a std)
(+ (call-distribution "Fitts Law" W D B A)
   (call-distribution "Gaussian" 0 STD))
) ; end lambda
) ; end defdist

