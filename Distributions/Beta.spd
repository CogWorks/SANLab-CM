(defdist "Beta"
"Picks random values from a beta distribution."
("A" "B" "Alpha" "Beta")
(nil nil nil nil)
(lambda ; start lambda
(a b alpha beta)
(let* ((ga (call-distribution "Gamma" alpha))
       (gb (call-distribution "Gamma" beta))
       (result (/ ga (+ ga gb))))
  (+ (* b result) (* a (- 1 result))))
) ; end lambda
) ; end defdist
