(defdist "Multi-Unit Gaussian CV"
"Draws multiple random variables from a gaussian distribution and sums them together to simulate individual syllables."
("Mean" "Coefficient of Variance" "Num. Units")
(nil nil nil)
(lambda ; start lambda
(mean cv num)
(if (<= cv 0)
    (error "Multi-Unit Gaussian CV given a coefficient of variation <= 0. Unable to continue."))
(let ((sum 0) (mean2 (if (> num 0) (/ mean num) 0)))
  (dotimes (x num sum)
    (setf sum (+ sum (call-distribution "Gaussian CV" mean2 cv)))))
) ; end lambda
) ; end defdist
